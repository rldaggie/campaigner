    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= link_to 'Keywords', campaign_keywords_path(campaign) %></td>
        <td><%= link_to 'Add Spreadsheet', new_campaign_sheet_path(campaign) %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
