<h1>Listing keywords for <%= @campaign.name %></h1>

<%= link_to 'Back', campaigns_url %>

<p>Total Clicks: <%= @campaign.total_clicks_per_day %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost per click</th>
      <th>Clicks per day</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.name %></td>
        <td><%= number_to_currency keyword.cost_per_click %></td>
        <td><%= number_with_precision keyword.clicks_per_day, precision: 2 %></td>
        <td><%= link_to 'Destroy', campaign_keyword_path(@campaign, keyword), method: :delete, remote: true, class: 'delete-keyword' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add spreadsheet', new_campaign_sheet_path(@campaign) %>