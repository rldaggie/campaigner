<h1>Listing keywords</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost per click</th>
      <th>Clicks per day</th>
      <th>Campaign</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.name %></td>
        <td><%= number_to_currency keyword.cost_per_click %></td>
        <td><%= keyword.clicks_per_day %></td>
        <td><%= link_to 'Destroy', campaign_keyword_path(@campaign, keyword), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add spreadsheet', new_campaign_sheet_path(@campaign) %>