<div class="page-header">
  <div class="btn-group pull-right">
    <%= link_to 'New Campaign', new_campaign_path, class: 'btn btn-success' %>
  </div><!--// .btn-group pull-right -->
  <h1>Listing campaigns</h1>
</div><!--// .page-header -->

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Keywords', campaign_keywords_path(campaign), class: 'btn btn-small' %>
            <%= link_to 'Add Spreadsheet', new_campaign_sheet_path(campaign), class: 'btn btn-small btn-success' %>
            <%= link_to 'Edit', edit_campaign_path(campaign), class: 'btn btn-small btn-warning' %>
            <%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger' %>
          </div><!--// .btn-group -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
